# UDOS Backend Configuration Template
# Copy to .env and fill in your values

# Application
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug
API_VERSION=v1

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/udos_dev
DATABASE_POOL_SIZE=20
DATABASE_IDLE_TIMEOUT=30000

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRES_IN=7d

# OAuth (Third-party)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_
STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_WEBHOOK_SECRET=whsec_

# AWS S3 (File storage)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=udos-dev-files
S3_UPLOAD_DIR=uploads/

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=noreply@udos.io

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Monitoring & Logging
SENTRY_DSN=
DATADOG_API_KEY=
DATADOG_APP_KEY=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_DELIVERY_MODULE=true
ENABLE_INSPECTION_MODULE=true
ENABLE_AGRICULTURE_MODULE=false
ENABLE_WHITE_LABEL=false
ENABLE_THERMAL_IMAGING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Security
BCRYPT_ROUNDS=10
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Drone Hardware
GPS_ACCURACY_THRESHOLD_M=10
WIND_SPEED_SAFETY_LIMIT_KMH=50
MAX_FLIGHT_TIME_MINUTES=120
BATTERY_CRITICAL_THRESHOLD_PERCENT=15

# Service URLs
FRONTEND_URL=http://localhost:5173
WEBSOCKET_URL=ws://localhost:3001
API_BASE_URL=http://localhost:3001/api/v1